<% include ./partials/header %>

<div class="container splitter">
    <div class="row">

        <h1 style = 'text-align:center;'> Post a new Job</h1>
        <div style='width:30%; margin: 25px auto'>

            <form action='/staff_portal' method='POST'>
                <div class='form-group'>
                    <input class='form-control' type='text' name='jTitle' placeholder='Job Title'>
                </div>
                <div class='form-group'>
                    <input class='form-control' type='text' name='jLocation' placeholder='Location'>
                </div>
                <div class='form-group'>
                    <input class='form-control' type='text' name='jSalary' placeholder='Salary'>
                </div>
                <div class='form-group'>
                    <textarea class ='form-control' name ='jDescription' placeholder = 'Job Description'> </textarea>
                </div>
                <div class='form-group'>
                    <button class='btn btn-lg btn-block btn-primary'>Submit</button>
                </div>
            </form>
            <a href='/staff_portal'>Go back</a>
        </div>
    </div>

</div>

<% include ./partials/footer %>