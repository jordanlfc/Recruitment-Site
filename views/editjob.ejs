<% include ./partials/header %>


<div class="container splitter">
    <div class="row">

        <h1 style = 'text-align:center;'> Edit <%=job.title%></h1>
        <div style='width:30%; margin: 25px auto'>

            <form action='/staff_portal/<%=job._id%>?_method=PUT' method='POST'>
                <div class='form-group'>
                    <input class='form-control' type='text' name='job[title]' placeholder ='Job Title' value = '<%=job.title%>' required>
                </div>
                <div class='form-group'>
                    <input class='form-control' type='text' name='job[location]' placeholder ='Job Location' value ='<%=job.location%>' required>
                </div>
                <div class='form-group'>
                    <input class='form-control' type='text' name='job[salary]' placeholder ='Salary' value ='<%=job.salary%>' required>
                </div>
                <div class='form-group'>
                    <input class='form-control' type='date' name='job[date]' placeholder='Start Date' value ='<%=job.startDate%>'>
                </div>
                <div class='form-group'>
                    <input class='text-box' id = 'myTextArea' type= 'text' class ='form-control' name ='job[description]' value ='<%=job.description%>' required >
                </div>
                <div class='form-group'>
                    <button class='btn btn-lg btn-block btn-primary'>Submit</button>
                </div>
            </form>
            <a href='/staff_portal'>Go back</a>
        </div>
    </div>

</div>

<% include ./partials/footer %>